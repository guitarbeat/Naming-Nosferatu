{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!!**/dist", "!!**/node_modules", "!!**/build"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off",
				"noUselessConstructor": "error",
				"noUselessEmptyExport": "error",
				"noUselessFragments": "error",
				"noUselessLabel": "error",
				"noUselessRename": "error",
				"noUselessTypeConstraint": "error"
			},
			"suspicious": {
				"noShadowRestrictedNames": "off",
				"noImplicitAnyLet": "off",
				"noArrayIndexKey": "off",
				"noUnknownAtRules": "off",
				"noExplicitAny": "warn",
				"noAssignInExpressions": "error",
				"noAsyncPromiseExecutor": "error",
				"noCatchAssign": "error",
				"noClassAssign": "error",
				"noCommentText": "warn",
				"noCompareNegZero": "error",
				"noControlCharactersInRegex": "error",
				"noDebugger": "error",
				"noDoubleEquals": "error",
				"noDuplicateCase": "error",
				"noDuplicateClassMembers": "error",
				"noDuplicateObjectKeys": "error",
				"noDuplicateParameters": "error",
				"noEmptyBlockStatements": "warn",
				"noFallthroughSwitchClause": "error",
				"noFunctionAssign": "error",
				"noImportAssign": "error",
				"noMisleadingCharacterClass": "error",
				"noMisleadingInstantiator": "error",
				"noPrototypeBuiltins": "warn",
				"noRedeclare": "error",
				"noUnsafeNegation": "error",
				"useGetterReturn": "error"
			},
			"style": {
				"noImplicitBoolean": "warn",
				"noNegationElse": "warn",
				"noParameterAssign": "warn",
				"noRestrictedGlobals": "warn",
				"noUnusedTemplateLiteral": "warn",
				"useBlockStatements": "warn",
				"useConst": "error",
				"useDefaultParameterLast": "warn",
				"useExponentiationOperator": "warn",
				"useFragmentSyntax": "warn",
				"useNamingConvention": "off",
				"noNamespaceImport": "error"
			},
			"a11y": {
				"recommended": false
			},
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"noUnusedVariables": "warn",
				"noUnusedImports": "error",
				"noUnusedPrivateClassMembers": "warn",
				"noUndeclaredVariables": "error"
			},
			"performance": {
				"noAccumulatingSpread": "warn",
				"noDelete": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			}
		}
	},
	"overrides": [
		{
			"includes": [
				"source/core/hooks/useUserSession.ts",
				"source/features/tournament/RankingAdjustment.tsx",
				"source/features/tournament/Tournament.tsx",
				"source/features/tournament/components/AnalysisWrappers.tsx",
				"source/features/tournament/components/AnalysisBulkActionsWrapper.tsx",
				"source/features/tournament/TournamentSetup.tsx",
				"source/features/tournament/components/TournamentFooter/TournamentFooter.tsx",
				"source/shared/components/ViewRouter/ViewRouter.tsx",
				"source/features/tournament/components/PersonalResults.tsx",
				"source/features/tournament/components/TournamentHeader/TournamentHeader.tsx",
				"source/features/tournament/hooks/useTournamentSetupHooks.ts",
				"source/shared/utils/coreUtils.ts",
				"source/shared/components/Bracket/Bracket.tsx",
				"source/shared/components/AnalysisDashboard/AnalysisDashboard.tsx",
				"source/shared/components/Card/components/CardName.tsx",
				"source/features/tournament/components/TournamentSidebar/PhotoComponents.tsx",
				"source/shared/components/NameManagementView/NameManagementView.tsx",
				"source/shared/components/NameGrid/NameGrid.tsx",
				"source/shared/propTypes.ts",
				"source/shared/services/errorManager/index.ts",
				"source/shared/services/supabase/supabaseClient.ts",
				"source/features/tournament/TournamentComponents.tsx",
				"source/hooks/useUserSession.ts"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": [
				"source/features/tournament/components/TournamentMatch/FerrofluidMatch.module.css",
				"source/features/tournament/TournamentSetup.module.css",
				"source/shared/styles/animations.css"
			],
			"linter": {
				"rules": {
					"complexity": {
						"noImportantStyles": "off"
					}
				}
			}
		},
		{
			"includes": ["scripts/**/*.js"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "warn"
					},
					"suspicious": {
						"noExplicitAny": "off"
					},
					"correctness": {
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"includes": ["source/core/constants/**/*.ts", "source/**/constants.ts"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"includes": ["supabase/types.ts", "source/shared/services/supabase/types.ts"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off"
					}
				}
			},
			"formatter": {
				"enabled": false
			}
		},
		{
			"includes": [
				"source/core/config/routeConfig.ts",
				"source/shared/components/NameManagementView/nameManagementCore.tsx",
				"source/features/analytics/services/analyticsService.ts",
				"source/features/auth/services/adminService.ts",
				"source/types/components.ts",
				"source/**/*.ts",
				"source/**/*.tsx"
			],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"includes": [
				"**/*.test.{js,jsx,ts,tsx}",
				"**/*.spec.{js,jsx,ts,tsx}",
				"source/shared/test-utils/**/*"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					},
					"style": {
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"includes": ["vite.config.ts", "tailwind.config.js", "vitest.config.mjs"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.tsx"],
			"linter": {
				"rules": {
					"style": {
						"useImportType": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"globals": [
			"vi",
			"describe",
			"it",
			"test",
			"expect",
			"beforeEach",
			"afterEach",
			"beforeAll",
			"afterAll"
		]
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
