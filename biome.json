{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!!**/dist"],
		"experimentalScannerIgnores": ["**/node_modules/**", "**/dist/**", "**/build/**"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off",
				"noUselessConstructor": "error",
				"noUselessEmptyExport": "error",
				"noUselessFragments": "warn",
				"noUselessLabel": "error",
				"noUselessRename": "error",
				"noUselessTypeConstraint": "error"
			},
			"suspicious": {
				"noShadowRestrictedNames": "off",
				"noImplicitAnyLet": "off",
				"noArrayIndexKey": "off",
				"noUnknownAtRules": "off",
				"noExplicitAny": "warn",
				"noAssignInExpressions": "error",
				"noAsyncPromiseExecutor": "error",
				"noCatchAssign": "error",
				"noClassAssign": "error",
				"noCommentText": "warn",
				"noCompareNegZero": "error",
				"noControlCharactersInRegex": "error",
				"noDebugger": "error",
				"noDoubleEquals": "error",
				"noDuplicateCase": "error",
				"noDuplicateClassMembers": "error",
				"noDuplicateObjectKeys": "error",
				"noDuplicateParameters": "error",
				"noEmptyBlockStatements": "warn",
				"noFallthroughSwitchClause": "error",
				"noFunctionAssign": "error",
				"noImportAssign": "error",
				"noMisleadingCharacterClass": "error",
				"noMisleadingInstantiator": "error",
				"noPrototypeBuiltins": "warn",
				"noRedeclare": "error",
				"noSelfAssign": "error",
				"noUnsafeFinally": "error",
				"noUnsafeNegation": "error",
				"useGetterReturn": "error",
				"useValidTypeof": "error"
			},
			"style": {
				"noImplicitBoolean": "warn",
				"noNegationElse": "warn",
				"noParameterAssign": "warn",
				"noRestrictedGlobals": "warn",
				"noUnusedTemplateLiteral": "warn",
				"useBlockStatements": "warn",
				"useConst": "error",
				"useDefaultParameterLast": "warn",
				"useExponentiationOperator": "warn",
				"useFragmentSyntax": "warn",
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"strictCase": false
					}
				}
			},
			"a11y": {
				"recommended": false
			},
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"noUnusedVariables": "warn",
				"noUnusedImports": "error",
				"noUnusedPrivateClassMembers": "warn"
			},
			"performance": {
				"noAccumulatingSpread": "warn",
				"noDelete": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			}
		}
	},
	"overrides": [
		{
			"includes": [
				"src/core/hooks/useUserSession.ts",
				"src/features/tournament/RankingAdjustment.tsx",
				"src/features/tournament/Tournament.tsx",
				"src/features/tournament/components/AnalysisWrappers.tsx",
				"src/features/tournament/components/AnalysisBulkActionsWrapper.tsx",
				"src/features/tournament/TournamentSetup.tsx",
				"src/features/tournament/Dashboard.tsx",
				"src/features/tournament/components/TournamentFooter/TournamentFooter.tsx",
				"src/shared/components/ViewRouter/ViewRouter.tsx",
				"src/features/tournament/components/PersonalResults.tsx",
				"src/features/tournament/components/TournamentHeader/TournamentHeader.tsx",
				"src/features/tournament/hooks/useTournamentSetupHooks.ts",
				"src/shared/utils/coreUtils.ts",
				"src/shared/components/Bracket/Bracket.tsx",
				"src/shared/components/AnalysisDashboard/AnalysisDashboard.tsx",
				"src/shared/components/Card/components/CardName.tsx",
				"src/features/tournament/components/TournamentSidebar/PhotoComponents.tsx",
				"src/shared/components/NameManagementView/NameManagementView.tsx",
				"src/shared/components/NameGrid/NameGrid.tsx",
				"src/shared/propTypes.ts",
				"src/shared/services/errorManager/index.ts",
				"src/shared/services/supabase/supabaseClient.ts"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": [
				"src/features/tournament/components/TournamentMatch/FerrofluidMatch.module.css",
				"src/features/tournament/TournamentSetup.module.css"
			],
			"linter": {
				"rules": {
					"complexity": {
						"noImportantStyles": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
