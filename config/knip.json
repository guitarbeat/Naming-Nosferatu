{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"entry": ["source/main.tsx"],
	"project": ["source/**/*.{js,jsx,ts,tsx}"],
	"ignore": [
		"**/*.md",
		"**/README.md",
		"**/IMPLEMENTATION.md",
		"postcss.config.js",
		"tailwind.config.js",
		"source/types/shims.d.ts",
		"source/shared/utils/performanceMonitor.d.ts",
		"source/shared/components/NameSuggestionModal/NameSuggestionModal.d.ts"
	],
	"ignoreDependencies": [],
	"typescript": true,
	"paths": {
		"@/*": ["./source/*"],
		"@components/*": ["./source/components/*"],
		"@hooks/*": ["./source/hooks/*"],
		"@utils/*": ["./source/utils/*"],
		"@services/*": ["./source/services/*"],
		"@styles/*": ["./source/styles/*"],
		"@features/*": ["./source/features/*"],
		"@core/*": ["./source/*"]
	}
}
