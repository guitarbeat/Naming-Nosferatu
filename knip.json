{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["src/index.jsx"],
  "project": ["src/**/*.{js,jsx,ts,tsx}", "config/**/*.{js,ts}"],
  "ignore": [
    "**/*.test.{js,jsx,ts,tsx}",
    "**/*.spec.{js,jsx,ts,tsx}",
    "**/setupTests.js",
    "**/stats.html",
    "**/*.md",
    "**/README.md",
    "**/IMPLEMENTATION.md",
    "config/postcss.config.js",
    "config/tailwind.config.js"
  ],
  "ignoreDependencies": [
    "@types/*",
    "vite",
    "vitest",
    "@vitejs/*",
    "eslint",
    "prettier",
    "stylelint",
    "postcss",
    "tailwindcss",
    "autoprefixer",
    "@tailwindcss/postcss",
    "babel-plugin-transform-react-remove-prop-types",
    "eslint-config-prettier",
    "glob",
    "postcss-discard-unused",
    "postcss-preset-env",
    "stylelint-config-recess-order",
    "stylelint-config-standard",
    "stylelint-declaration-block-no-ignored-properties",
    "stylelint-declaration-strict-value",
    "supabase"
  ],
  "ignoreBinaries": ["vite", "vitest"],
  "ignoreIssues": {
    "src/core/store/types.ts": ["exports"],
    "src/integrations/supabase/client.ts": ["exports"],
    "src/integrations/supabase/types.ts": ["exports"]
  },
  "typescript": {
    "configPath": "config/tsconfig.json"
  },
  "paths": {
    "@/*": ["./src/*"],
    "@components/*": ["./src/shared/components/*"],
    "@hooks/*": ["./src/core/hooks/*"],
    "@utils/*": ["./src/shared/utils/*"],
    "@services/*": ["./src/shared/services/*"],
    "@styles/*": ["./src/shared/styles/*"],
    "@features/*": ["./src/features/*"],
    "@core/*": ["./src/core/*"]
  }
}
